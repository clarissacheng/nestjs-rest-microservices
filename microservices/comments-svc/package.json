{
  "name": "comments-svc",
  "version": "1.0.0",
  "description": "gRPC microservice back-end for comments. Used for learning/trial purposes only.",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^1.2.1",
    "@nestjs/core": "^8.4.7",
    "@nestjs/microservices": "^8.4.7",
    "faker": "4.1.0",
    "lodash": "4.17.15",
    "nestjs-pino": "^2.6.0",
    "pg": "7.18.1",
    "pg-hstore": "2.3.3",
    "pino": "^7.11.0",
    "pino-http": "^6.6.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "^7.5.5",
    "sequelize": "5.21.4",
    "sequelize-typescript": "1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/bluebird": "3.5.29",
    "@types/faker": "4.1.9",
    "@types/jest": "25.1.2",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.0",
    "@types/validator": "12.0.1",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.7.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "25.1.0",
    "jest-extended": "0.11.5",
    "pino-pretty": "3.5.0",
    "prettier": "1.19.1",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:benjsicam/nestjs-rest-microservices.git"
  },
  "author": "Benj Sicam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjsicam/nestjs-rest-microservices/issues"
  },
  "homepage": "https://github.com/benjsicam/nestjs-rest-microservices#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "tests/*.+(test.ts)",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
